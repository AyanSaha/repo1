<div class="overlay-form">
<%= form_for :article, url: article_path(@article), method: :patch  do |f| %>
<p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit "Submit", class: "btn btn-info"%>
  </p>
<div class="center">
 <%= link_to 'Back',articles_path %>
<% end %>
</div>
</div>
